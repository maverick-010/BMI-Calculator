<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    android:gravity="top|start"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="2dp"
    android:paddingBottom="30dp"
    android:orientation="vertical"
    android:id="@+id/containerR"
    tools:context=".ResultActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Your BMI is : "
            android:textColor="@color/black"
            android:textSize="30sp"

            />
        <soup.neumorphism.NeumorphTextView
            android:id="@+id/bmiValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="26.5:"
            android:textColor="#3F51B5"
            android:textSize="30sp"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bmiFlagImgV"
            android:src="@drawable/check"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/bmiLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="You have a Normal Weight!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:letterSpacing="0.04"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp">

        <TextView
            android:id="@+id/commentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Here are some advices to help you keep your weight:"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center|left"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/adviceImg"
    android:layout_marginEnd="16sp"
    android:src="@drawable/active"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adviceTv"
        android:text="Stay Active"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        />
</LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/advice2Img"
                android:layout_marginEnd="16sp"
                android:src="@drawable/salad"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/advice2Tv"
                android:text="Eat more salad"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/advice3Img"
                android:layout_marginEnd="16sp"
                android:src="@drawable/sleep"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/advice3Tv"
                android:text="Sleep well"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>